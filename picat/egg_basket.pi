import cp.

main => go.

go => 
   MaxN = 6,
   X = new_list(MaxN),
   % X in 1..10000,
   % N in 1..10000,

   foreach(I in 1..MaxN) X[I] #> 0 end,
   N #> 1,

   % N = 2*X[1]+1,
   % N = 3*X[2]+1,
   % N = 4*X[3]+1,
   % N = 5*X[4]+1,
   % N = 6*X[5]+1,
   % N = 7*X[6]

   % generalized solution
   foreach(I in 1..MaxN) 
     if I < MaxN then
       N #= (I+1)*X[I]+1 
     else 
       N #= (I+1)*X[I] 
     end
   end,

   % to see the infered domains
   % writeln(x_before=X),
   % writeln(n_before=N),

   solve($[min(N)], X),

   writeln(n=N),
   writeln(x=X),
   nl.
