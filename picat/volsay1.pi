import cp.

main => go.

go =>
   Gas in 0..100000,
   Chloride in 0..100000,

   Gas + Chloride #=< 50,
   3 * Gas + 4 * Chloride #=< 180,

   MaxVal #= 40 * Gas + 50 * Chloride,

   solve([$max(MaxVal)],[Gas,Chloride]),

   writeln(gas=Gas),
   writeln(chloride=Chloride),
   writeln(max_val=MaxVal),
   nl.
